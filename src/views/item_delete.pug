extends layout

block content
    .item-delete
        h1= title

        .item-details-image
            img(src='/inventory/image/' + item.image._id, alt=item.name)

        .item-details-info
            h3= item.name

        p.description #{item.description}
        a(href=item.category.url) #{item.category.name}
        p.price #[strong Price:] $#{item.price}
        p.stock #[strong Stock:] #{item.numberInStock}

        p Are you sure you want to delete this item?

        form.delete-form(method='POST' action='')
            input(type='hidden' name='id' required='true', value=item._id)
            .btn-container
                a(href='/inventory/item/' + item._id)
                    button(type="button") Go Back
                button.delete-button(type="submit") Delete